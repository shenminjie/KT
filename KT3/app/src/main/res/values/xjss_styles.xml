<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SearchEdtStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100px</item>
        <item name="android:textSize">38px</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/colorTipsGrayDark</item>
    </style>

    <style name="TxtStyle">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28px</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">6px</item>
        <item name="android:layout_marginRight">6px</item>
        <item name="android:textColor">@color/color_edt_gray</item>
    </style>

    <style name="NewContestRelativeStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150px</item>
    </style>

    <style name="arrowStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/right_arrow</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">8px</item>
    </style>

    <style name="NewContestTxtStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10px</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">35px</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NewContestValueTxtStyle">
        <item name="android:layout_width">300px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/color_gray_light</item>
        <item name="android:textColorHint">@color/color_gray_hint_light</item>
        <item name="android:textSize">32px</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="ContestLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_gray_line</item>
    </style>

    <style name="my_dialog" parent="android:Theme.Translucent.NoTitleBar">
    </style>

</resources>
