<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_vs_titile_bt"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/text_black">

        <ImageView
            android:id="@+id/image_vs_item_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@mipmap/nomal_back" />

        <TextView
            android:id="@+id/tv_title_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="上海足球KT赛事"
            android:textColor="@color/gold"
            android:textSize="18dp" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/LL_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/rl_vs_titile_bt"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_paihang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="排行榜"
            android:button="@null"
            android:textColor="#c9c9c9"
            android:textSize="12sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rb_zongchangci"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="总场次"
            android:button="@null"
            android:textColor="#c9c9c9"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_kongbai"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_below="@+id/LL_title"
        android:background="#f7f7f7"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:text="年级"
            android:textColor="#adadad" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:text="胜率"
            android:textColor="#adadad" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:text="积分"
            android:textColor="#adadad" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="战斗力"
            android:textColor="#adadad" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="130dp"

        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_vs_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/ll_kongbai"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="290dp">

            <ListView
                android:id="@+id/lv_vs_ej"
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:divider="#ebebeb"
                android:dividerHeight="1px"
                android:background="#999">
            </ListView>


        </LinearLayout>
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center_horizontal|center_vertical">
          <Button android:id="@+id/saishi"
              android:layout_width="193dp"
              android:layout_height="37dp"
              android:background="#222222"
              android:text="执行本场赛事"
              android:textColor="#ffffff"
              />
      </RelativeLayout>


    </LinearLayout>

    <ListView
        android:id="@+id/lv_vs_cc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#ebebeb"
        android:dividerHeight="1px"
        android:layout_below="@+id/LL_title"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#663">
    </ListView>

</RelativeLayout>
