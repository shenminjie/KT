<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="15dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/back"
                 />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingBottom="15dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="15dp"
                android:src="@drawable/back"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_toLeftOf="@id/imageView11"
                android:gravity="center_vertical|center_horizontal"
                android:text="模特认证 ( 2/3 )"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:background="#dedede"
                android:textColor="#dedede" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.newer.kt.record.MovieRecorderView
                android:id="@+id/movieRecorderView"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" />


                        <ImageView
                            android:id="@+id/shoot_button"
                            android:layout_width="300px"
                            android:layout_height="300px"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="300px"
                            android:src="@drawable/vs"
                            />

        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <include layout="@layout/activity_kt_prep" />

        <!--<include android:id="@+id/kt_over" android:visibility="gone" layout="@layout/activity_kt_prep"  />-->
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:background="#6a000000"
        >

        <ImageView
            android:id="@+id/submit"
            android:layout_width="80dip"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="15dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="15dp"
            android:background="@drawable/back"
            android:visibility="gone"
            />


    </RelativeLayout>
</RelativeLayout>