<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/teach_content_title_layout"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/colorGray">
            <TextView
                android:id="@+id/teach_content_item_title"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="1.热身准备活动"
                android:singleLine="true"
                android:textSize="60px"
                android:paddingLeft="20px"/>
            <TextView
                android:id="@+id/teach_content_item_time"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="10min"
                android:gravity="right"
                android:singleLine="true"
                android:textSize="50px"
                android:paddingRight="20px"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/teach_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="250px"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/teach_content_item_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_launcher"
                        android:layout_marginLeft="20px"/>
                </com.zhy.autolayout.AutoRelativeLayout>
                <TextView
                    android:id="@+id/teach_content_item_txt"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="慢跑"
                    android:textSize="50px"
                    android:gravity="center"
                    android:singleLine="true"/>
                <TextView
                    android:id="@+id/teach_content_item_detail"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="详细内容"
                    android:gravity="right"
                    android:textColor="@color/color_gray_light"
                    android:singleLine="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right_arrow"
                    android:layout_marginRight="20px"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <View android:id="@+id/teach_content_item_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_gray_line"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </FrameLayout>

</com.zhy.autolayout.AutoLinearLayout>