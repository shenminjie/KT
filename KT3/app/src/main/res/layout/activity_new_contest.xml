<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/recyclerview_top"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:background="@color/text_black">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/back"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/nomal_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="新建赛事"
            android:textColor="@color/gold"
            android:textSize="18dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/create"
            android:textColor="@color/gold"
            android:text="完成"
            android:layout_marginRight="20px"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="364px">
                <ImageView
                    android:id="@+id/contest_icon"
                    android:layout_width="234px"
                    android:layout_height="234px"
                    android:src="@drawable/portrait"
                    android:layout_centerInParent="true"/>
            </com.zhy.autolayout.AutoRelativeLayout>

            <View style="@style/ContestLineStyle"/>

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/contest_club_layout"
                style="@style/NewContestRelativeStyle"
                android:layout_marginLeft="20px">
                <TextView
                    style="@style/NewContestTxtStyle"
                    android:text="@string/contest_club"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/my_promote_arrow"
                    style="@style/arrowStyle"/>
                <TextView
                    android:id="@+id/contest_club_txt"
                    style="@style/NewContestValueTxtStyle"
                    android:layout_toLeftOf="@id/my_promote_arrow"
                    android:text="KT校园俱乐部"/>
            </com.zhy.autolayout.AutoRelativeLayout>
            <View style="@style/ContestLineStyle"/>
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/contest_name_layout"
                style="@style/NewContestRelativeStyle"
                android:layout_marginLeft="20px">
                <TextView
                    style="@style/NewContestTxtStyle"
                    android:text="@string/contest_name"
                    android:gravity="center_vertical"/>
                <EditText
                    android:textColor="@color/black"
                    android:background="@color/transparent"
                    android:id="@+id/contest_name_txt"
                    style="@style/NewContestValueTxtStyle"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24px"
                    android:hint="@string/contest_name_hint"/>
            </com.zhy.autolayout.AutoRelativeLayout>
            <View style="@style/ContestLineStyle"/>
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/contest_address_layout"
                style="@style/NewContestRelativeStyle"
                android:layout_marginLeft="20px">
                <TextView
                    style="@style/NewContestTxtStyle"
                    android:gravity="center_vertical"
                    android:text="@string/contest_address"/>
                <TextView
                    android:id="@+id/contest_address_txt"
                    style="@style/NewContestValueTxtStyle"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24px"
                    android:gravity="right|center_vertical"
                    
                    android:hint="@string/contest_address_hint"/>
            </com.zhy.autolayout.AutoRelativeLayout>
            <View style="@style/ContestLineStyle"/>
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/contest_start_time_layout"
                style="@style/NewContestRelativeStyle"
                android:layout_marginLeft="20px">
                <TextView
                    style="@style/NewContestTxtStyle"
                    android:text="@string/contest_start_time"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/start_time_arrow"
                    style="@style/arrowStyle"/>
                <TextView
                    android:id="@+id/contest_start_time_txt"
                    style="@style/NewContestValueTxtStyle"
                    android:layout_toLeftOf="@id/start_time_arrow"
                    android:hint="@string/contest_start_time_hint"/>
            </com.zhy.autolayout.AutoRelativeLayout>
            <View style="@style/ContestLineStyle"/>
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/contest_end_time_layout"
                style="@style/NewContestRelativeStyle"
                android:layout_marginLeft="20px">
                <TextView
                    style="@style/NewContestTxtStyle"
                    android:text="@string/contest_end_time"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/end_time_arrow"
                    style="@style/arrowStyle"/>
                <TextView
                    android:id="@+id/contest_end_time_txt"
                    style="@style/NewContestValueTxtStyle"
                    android:layout_toLeftOf="@id/end_time_arrow"
                    android:hint="@string/contest_end_time_hint"/>
            </com.zhy.autolayout.AutoRelativeLayout>
            <View style="@style/ContestLineStyle"/>
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/contest_introduce_layout"
                style="@style/NewContestRelativeStyle">
                <TextView
android:layout_marginLeft="20px"
                    style="@style/NewContestTxtStyle"
                    android:text="@string/contest_introduce"
                    android:gravity="center_vertical"/>
                <EditText
                    style="@style/NewContestValueTxtStyle"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24px"
                    android:hint="@string/contest_introduce_hint"
                    android:textColor="@color/black"
                    android:background="@color/transparent"/>
            </com.zhy.autolayout.AutoRelativeLayout>

            <View style="@style/ContestLineStyle"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
</com.zhy.autolayout.AutoLinearLayout>
