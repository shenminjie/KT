<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_foot_ball__class__lesson"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.newer.kt.Refactor.ui.Avtivity.FootBall_Class_Lesson">

    <RelativeLayout android:id="@+id/titlelt"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/text_black"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/iv_ft_back1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="doBack"
            android:paddingLeft="25px"
            android:paddingRight="25px"
            android:src="@mipmap/nomal_back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="小学一年级第一学期"
            android:textColor="@color/gold"
            android:textSize="18dp" />

    </RelativeLayout>

    <GridView
        android:padding="25px"
        android:horizontalSpacing="30px"
        android:verticalSpacing="20px"
        android:id="@+id/gv_zqk"
        android:layout_below="@+id/titlelt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"
        android:listSelector="@color/yellow"
        android:cacheColorHint="@color/transparent">
    </GridView>
</RelativeLayout>
