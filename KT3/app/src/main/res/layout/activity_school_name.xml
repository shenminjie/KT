<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.newer.kt.Refactor.ui.SchoolName">

    <RelativeLayout
        android:id="@+id/rl_vs_titile_bt"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/text_black">

        <TextView
            android:gravity="center"
            android:id="@+id/tv_quxiao"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="取消"
            android:textColor="@color/gold"
           android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_title_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="学校名称"
            android:textColor="@color/gold"
            android:textSize="18dp" />
        <TextView
            android:gravity="center"
            android:id="@+id/tv_baocun"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="保存"
            android:textColor="@color/gold"
            android:textSize="18dp"
            />


    </RelativeLayout>

    <EditText
        android:id="@+id/et_schoolName"
        android:text="上海KT足球学校123"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>
