<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.newer.kt.NEVideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
    <RelativeLayout android:layout_alignParentBottom="true" android:layout_width="match_parent" android:layout_height="60dip"  >
        <ProgressBar android:layout_width="match_parent" style="?android:attr/progressBarStyleHorizontal" android:max="100"  android:layout_height="match_parent" android:background="@android:color/holo_blue_bright"
            android:id="@+id/jindu">
        </ProgressBar>
        <CountDownTimer android:id="@+id/jindushow"
            android:text="111"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
</RelativeLayout>