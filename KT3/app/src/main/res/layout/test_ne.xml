        <View android:layout_width="match_parent" android:layout_height="60dip" android:minHeight="60dip" android:maxHeight="60dip"
              android:background="@android:color/holo_blue_bright"
            android:id="@+id/jindu" >
        </View>
        <TextView android:id="@+id/jindushow"
                  android:gravity="center_vertical"
                  android:textColor="@android:color/black"
                  android:textStyle="bold"
