<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg_color"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_titile"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/text_black">

        <ImageView
            android:id="@+id/image_refresh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@mipmap/load" />

        <TextView
            android:id="@+id/tv_title_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="上海足球KT赛事"
            android:textColor="@color/gold"
            android:textSize="18dp" />


        <ImageView
            android:id="@+id/image_new"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@mipmap/add_student"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>






    <RelativeLayout
        android:id="@+id/rl_saishi"
        android:layout_marginTop="44dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/line"
            android:id="@+id/view4">

        </View>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_below="@+id/view4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/tv_all_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="9"
                android:textColor="#222222"
                android:textSize="60sp"

                />

            <TextView
                android:id="@+id/tv_all_nale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="总赛事数"
                android:textColor="@color/text_grey"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_all_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="68"
                        android:textColor="@color/text_black"
                        android:textSize="18dp"
                        />

                    <TextView
                        android:id="@+id/tv_all_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="总人数"
                        android:textColor="@color/text_grey"
                        android:textSize="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_all_games"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="274"
                        android:textColor="@color/text_black"
                        android:textSize="18dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="总比赛数"
                        android:textColor="@color/text_grey"
                        android:textSize="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5/57"
                        android:textColor="@color/text_black"
                        android:textSize="18dp"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="男/女"
                        android:textColor="@color/text_grey"
                        android:textSize="13dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout

        android:layout_below="@id/rl_saishi"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f7f7f7">

    </LinearLayout>
    <ListView
        android:id="@+id/lv_saishi"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rl_saishi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#ebebeb"
        android:dividerHeight="1px" >

    </ListView>
</RelativeLayout>