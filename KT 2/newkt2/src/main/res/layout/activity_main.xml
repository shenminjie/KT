<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nomel"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/mian_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
    </FrameLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/mian_button1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:checked="true"
            android:onClick="mianClick"
            android:drawableTop="@drawable/selector_main_bottom_1"
            />
        <RadioButton
            android:id="@+id/mian_button2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:onClick="mianClick"
            android:drawableTop="@drawable/selector_main_bottom_2"
            />
        <RadioButton
            android:id="@+id/mian_button3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:onClick="mianClick"
            android:drawableTop="@drawable/selector_main_bottom_3"
            />
        <RadioButton
            android:id="@+id/mian_button4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:onClick="mianClick"
            android:drawableTop="@drawable/selector_main_bottom_4"
            />
        <RadioButton
            android:id="@+id/mian_button5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:onClick="mianClick"
            android:drawableTop="@drawable/selector_main_bottom_5"
            />
    </RadioGroup>
</LinearLayout>
